<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/offwhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/background1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.example.canvas_practices.graphics.CustomView
            android:id="@+id/BoardView"
            android:layout_marginTop="170sp"
            android:layout_width="match_parent"
            android:layout_height="350sp"
            android:elevation="30sp"/>

    </FrameLayout>
        <ImageButton
            android:id="@+id/Button_Rightmove"
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_navigate_next_24"
            android:background="@color/offwhite"
            android:contentDescription="@string/contentdesc_buttonRmove"/>
        <ImageButton
            android:id="@+id/Button_Downmove"
            android:layout_marginTop="0sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:background="@color/offwhite"
            android:contentDescription="@string/contentdesc_buttonL"/>
        </LinearLayout>
    </RelativeLayout>
