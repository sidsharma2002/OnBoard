<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/offwhite">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/scrollView">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/background1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.example.canvas_practices.graphics.CustomView
            android:id="@+id/BoardView"
            android:layout_marginTop="160sp"
            android:layout_width="wrap_content"
            android:layout_height="350sp"
            android:elevation="30sp"/>

    </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:elevation="15sp">
        <ImageButton
            android:id="@+id/Button_Rightmove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0sp"
            android:background="@color/cardview_dark_background"
            android:contentDescription="@string/contentdesc_buttonRmove"
            android:src="@drawable/ic_baseline_navigate_next_24" />

        <ImageButton
            android:id="@+id/Button_Downmove"
            android:layout_marginTop="0sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:background="@color/cardview_dark_background"
            android:contentDescription="@string/contentdesc_buttonL"/>
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500sp">
    </LinearLayout>
</LinearLayout>

    </ScrollView>
